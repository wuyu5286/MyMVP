<resources>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowAnimationStyle">@style/start_Anim</item>
    </style>

    <style name="start_Anim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/white</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="Dialog_Transparent" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/white</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
    </style>

    <style name="Dialog_Animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_anim_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_anim_exit</item>
    </style>


    <style name="BottomViewTheme_Default">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BottomViewTheme_Transparent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="BottomViewAnimation" parent="android:Animation">
        <!--<item name="@android:windowEnterAnimation">@anim/bottom_view_anim_enter</item>-->
        <!--<item name="@android:windowExitAnimation">@anim/bottom_view_anim_exit</item>-->
        <item name="android:windowEnterAnimation">@anim/bottom_view_anim_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_view_anim_exit</item>
    </style>

    <style name="hintText">
        <item name="android:textColor">@drawable/hint</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="TextTitle">
        <item name="android:textColor">?attr/text_title</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSubhead">
        <item name="android:textColor">?attr/text_subhead</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBody">
        <item name="android:textColor">?attr/text_body</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextTitle.Inverse">
        <item name="android:textColor">@color/text_100_inverse</item>
    </style>

    <style name="TextSubhead.Inverse">
        <item name="android:textColor">@color/text_54_inverse</item>
    </style>

    <style name="TextBody.Inverse">
        <item name="android:textColor">@color/text_87_inverse</item>
    </style>

    <style name="MainBottomTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_color_gray2red_selector</item>
    </style>

</resources>
